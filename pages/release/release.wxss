.release-body{
  padding: 0 30rpx;
  height: 100vh;
}
.release-title{
  font-size: 40rpx;
  text-align: center;
  line-height: 50rpx;
  padding-top:30rpx;
}
.release-head{
  display:flex;
  width: 100%;
  justify-content: space-between;
  font-size: 25rpx;
  color: #666;
  line-height: 40rpx;
  margin-top: 30rpx;
}
.release-head .head-info{
  display: block;
}
.ql-container{
  margin-top: 20rpx;
  border-bottom: 1px solid #f5f5f5;
  height: calc(100% - 40rpx);
}
.editor-box{
  position: relative;
  margin-top: 20rpx;
  display: flex;
  flex-direction:column;
  height: 100%;
}
.editor-bg-box{
  position: relative;
  flex-grow: 1;
  flex-shrink: 1;
}
.editor-bg-box .editor-bg{
  position: absolute;
  top: 0;
  left: 0;
  background-size:cover;
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
  opacity: .5;
  z-index: -1;
}
.editor-box .editor-title{
  display: block;
  font-size: 45rpx;
  color: #333;
  padding-bottom: 20rpx;
  width: 100%;
  border-bottom: 2rpx dashed #f1f1f1;
  flex-grow: 0;
  flex-shrink: 0;
}
.release-body{
  display: flex;
  flex-direction:column;
}
.release-m{
  flex-grow: 1;
  flex-shrink: 1;
}
.release-h,.release-f{
  flex-grow: 0;
  flex-shrink: 0;
}
.release-body .set-img{
  position: absolute;
  bottom: 30rpx;
  right: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  font-size: 20rpx;
  line-height: 100rpx;
  text-align: center;
  margin:0;
  padding:0;
}
.bg-title{
  font-size: 30rpx;
  line-height: 50rpx;
  color: #666;
  margin-top:10rpx;
}
.bg-box{
  display: flex;
  width: 100%;
  justify-content: space-around;
  margin:20rpx 0;
}
.bg-box .bg-tab{
  display: block;
  width: 100rpx;
  height: 100rpx;
}
.btn-box{
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.btn-box .editor-btn{
  flex: 1;
  font-size: 30rpx;
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
  border: none;
  border-radius: 0;
}