.reasoning-body{
  margin:0rpx 30rpx;
  font-size: 25rpx;
  display: flex;
  height: 100vh;
  flex-direction: column;
}
.reasoning-head{
  height: 114rpx;
}
.left-h{
  float: left;
  width: 50%;
}
.right-h{
  float: left;
  text-align: right;
  width: 30%;
}
.rr-h{
  float: left;
  width: 20%;
}
.reasoning-title{
  display: block;
}
.part-num{
  display: block;
}
.join-num{
  display: block;
  color: #666;
}
.coin-num{
  display: block;
  font-size: 20rpx;
  line-height: 30rpx;
}
.user-img{
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin:0 auto;
}
.user-name{
  display: inline-block;
  /* display: block; */
  margin-top: 10rpx;
}
.reasoning-body .invitation-btn{
  padding:0;
  margin:0;
  width:100rpx;
  height: 40rpx;
  font-size: 20rpx;
  line-height: 40rpx;
  float: right;
}
.button-box{
  display: flex;
}
.button-box .btn{
  flex: 1;
  padding:20rpx 0;
}
.question{
  margin-top: 10rpx;
  flex: 1;
}
.reasoning-content{
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  text-indent: 64rpx;
}
.reasoning-radio .radio-btn{
  margin-bottom: 10rpx;
}
.button-box .clue{
  margin:0 auto;
  background:url(data:image/png;base64,) no-repeat !important;
  background-size: 100% 100%;
  height: 64rpx;
  width: 64rpx;
}
.to-prev{
  margin: 0 auto;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
  height: 64rpx;
  width: 64rpx;
}
.to-next{
  margin: 0 auto;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
  width:64rpx;
  height: 64rpx;
}