.list-body{

}
.list-body .list-head{
  position: relative;
}
.list-body .list-head .list-name{
  position: absolute;
  font-size: 50rpx;
  color: #fff;
  padding: 30rpx;
  background: rgba(0, 0, 0, .3);
  border-radius: 8rpx;
}
.list-body .list-head .list-bg{
  display: block;
  width: 100vw;
  height: 300rpx;
}
.page-list{
  background: #f0f0f0;
  width: 100%;
}
.list-body{
  display: flex;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 15rpx;
  padding:10rpx 20rpx;
  color: #333;
}
.list-body:last-child{
margin-bottom: 0;
}
.list-body .user-photo{
  display: block;
  width: 180rpx;
  height: auto;
  margin-right: 10px;
}
.list-body .info-box{
  display: flex;
  flex: 1;
  flex-direction:column;
}
.list-body .info-box .page-info{
  flex: 1;
}
.list-body .num-box{
  font-size: 20rpx;
  text-align: right;
}